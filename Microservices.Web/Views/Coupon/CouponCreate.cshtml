@model CouponDTO
<form asp-action="CouponCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Criar Cupom</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Código do Cupom</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CouponCode" class="form-control" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Percentual de desconto</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DiscountAmount" class="form-control" type="text" oninput="replaceCommaWithDot(this)"/>
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Quantidade mínima</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MinAmount" class="form-control" type="text" oninput="validarNumero(this)"/>
                <span asp-validation-for="MinAmount" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">

                <a asp-action="CouponIndex" class="btn-primary btn form-control ">Voltar para a Lista </a>
            </div>
            <div class="col-5">
                <input type="submit" value="Criar Cupom" class="btn btn-success form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        function replaceCommaWithDot(input) {
            input.value = input.value.replace(/,/g, '.');

            // Limitar o número de casas decimais a no máximo duas
            var decimalIndex = input.value.indexOf('.');
            if (decimalIndex !== -1) {
                var decimalPart = input.value.substring(decimalIndex + 1);
                if (decimalPart.length > 2) {
                    input.value = input.value.substring(0, decimalIndex + 3);
                }
            }
        }


    </script>
}