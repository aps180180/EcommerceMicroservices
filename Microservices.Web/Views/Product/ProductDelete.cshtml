@model ProductDTO

<form asp-action="ProductDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Excluir Produto</h1>
        <input hidden asp-for="ProductId" />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Nome</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Preço</label>
            </div>
            <div class="col-2 pb-3">
                <input asp-for="Price" class="form-control" type="text" oninput="replaceCommaWithDot(this)" disabled />
                
            </div>
            <div class="row"></div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Descrição</label>
            </div>
            <div class="col-10 pb-3">
                <textarea rows="5" asp-for="Description" class="form-control" type="text" disabled></textarea>
                
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Categoria</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" class="form-control" type="text" disabled />
                
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Url da Imagem</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" class="form-control" type="text" disabled />
                
            </div>

            <div class="col-5 offset-2">

                <a asp-action="ProductIndex" class="btn-primary btn form-control ">Voltar para a Lista </a>
            </div>
            <div class="col-5">
                <input type="submit" value="Excluir Produto" class="btn btn-danger form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function replaceCommaWithDot(input) {
            input.value = input.value.replace(/,/g, '.');

            // Limitar o número de casas decimais a no máximo duas
            var decimalIndex = input.value.indexOf('.');
            if (decimalIndex !== -1) {
                var decimalPart = input.value.substring(decimalIndex + 1);
                if (decimalPart.length > 2) {
                    input.value = input.value.substring(0, decimalIndex + 3);
                }
            }
        }


    </script>
}