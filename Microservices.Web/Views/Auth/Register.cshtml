@model RegistrationRequestDTO
<form method="post">
    <div class="container border p-4">
        <div class="row text-center p3">
            <h1>Inscrever-se</h1>
        </div>
        
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
               
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Email..."></>
                <span asp-validation-for="Email" class="text-danger" />

            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" placeholder="Nome..."></>
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <label asp-for="PhoneNumber" class="control-label">Telefone</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Telefone..."></>
                <span asp-validation-for="PhoneNumber" class="text-danger" />
            </div>

            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <label asp-for="Password" class="control-label">Senha</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Senha..."></>
                <span asp-validation-for="Password" class="text-danger"/>
            </div>

            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <label asp-for="Role" class="control-label">Função</label>
                <select asp-for="Role" class="form-select"asp-items="@ViewBag.RoleList" >    
                   <option disabled selected>--Selecionar a função--</option>
               </select>
            </div>
            
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Inscrever-se</button>

            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}